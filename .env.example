# 이 파일을 .env.local로 복사하고 실제 값으로 변경하세요

# NextAuth 설정
NEXTAUTH_URL=http://localhost:3005
NEXTAUTH_SECRET=여기에_openssl_rand_-base64_32_결과_붙여넣기

# Google OAuth (Google Cloud Console에서 가져오기)
GOOGLE_CLIENT_ID=여기에_구글_클라이언트_ID
GOOGLE_CLIENT_SECRET=여기에_구글_클라이언트_시크릿

# Facebook OAuth (Facebook Developers에서 가져오기)  
FACEBOOK_CLIENT_ID=여기에_페이스북_앱_ID
FACEBOOK_CLIENT_SECRET=여기에_페이스북_앱_시크릿

# Database
DATABASE_URL=mongodb://localhost:27017/philippines-portal

# JWT Secrets
JWT_SECRET=your-jwt-secret-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production

# Redis (캐싱용)
REDIS_URL=redis://localhost:6379

# Next.js Public
NEXT_PUBLIC_SITE_URL=http://localhost:3005

# Cron Secret
CRON_SECRET=your-cron-secret-key

# Google Analytics (선택사항)
NEXT_PUBLIC_GA_ID=

# 이미지 업로드 설정
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100